<Window x:Name="InfoWindow1" x:Class="WpfApp1.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="本机信息" Height="400" Width="800" ResizeMode="NoResize" Icon="process_96px.png">
    <Grid>
        <DockPanel LastChildFill="False">
            <Canvas Width="792" Background="White">
                <Rectangle Height="56" Stroke="Black" Width="792" Fill="#FF0885B4"/>
                <Button x:Name="ReturnBtn" Content="返  回" Canvas.Left="10" Canvas.Top="10" Width="70" Height="35" FontSize="18" Background="White" FontWeight="Bold" RenderTransformOrigin="0.493,0.471"/>
                <Label x:Name="InfoTitle" Content="基本信息" Canvas.Top="61" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="10"/>
            </Canvas>
        </DockPanel>
    </Grid>
</Window>
